{
	"name": "multi-burn",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"start": "pnpm run release && node dist/http-server/main",
		"dev": "tsx --watch ./src/http-server/main.ts",
		"type-check": "tsc --noEmit",
		"lint": "biome lint --error-on-warnings ./src",
		"format": "biome format ./src --fix",
		"clean": "biome check ./src --write",
		"release": "tsc --noEmit && rm -rf dist && pnpm run build",
		"build": "swc --strip-leading-paths -d dist src",
		"db:gen": "rm -rf src/database/generated && prisma generate --schema=src/database/prisma/schema.prisma",
		"db:push": "prisma db push --schema=src/database/prisma/schema.prisma && pnpm run db:gen",
		"program:gen": "rm -rf src/shared/solana/multiburn && codama run --all && pnpm run clean",
		"tsx": "tsx"
	},
	"keywords": [],
	"author": "goni098",
	"license": "ISC",
	"packageManager": "pnpm@10.28.0",
	"type": "module",
	"dependencies": {
		"@fastify/autoload": "^6.3.1",
		"@fastify/cors": "^11.2.0",
		"@fastify/sensible": "^6.0.4",
		"@fastify/swagger": "^9.6.1",
		"@fastify/swagger-ui": "^5.2.4",
		"@node-rs/jsonwebtoken": "^0.5.9",
		"@prisma/adapter-pg": "^7.2.0",
		"@prisma/client": "^7.2.0",
		"@solana-program/compute-budget": "^0.11.0",
		"@solana-program/memo": "^0.10.0",
		"@solana-program/system": "^0.10.0",
		"@solana-program/token": "^0.9.0",
		"@solana/kit": "^5.3.0",
		"dotenv": "^17.2.3",
		"fastify": "^5.6.2",
		"fastify-plugin": "^5.1.0",
		"fastify-type-provider-zod": "^6.1.0",
		"luxon": "^3.7.2",
		"p-limit": "^7.2.0",
		"pg": "^8.16.3",
		"viem": "^2.44.1",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@codama/nodes-from-anchor": "^1.3.8",
		"@codama/renderers-js": "^1.5.5",
		"@swc/cli": "^0.7.9",
		"@swc/core": "^1.15.8",
		"@types/luxon": "^3.7.1",
		"@types/node": "^22",
		"@types/pg": "^8.16.0",
		"codama": "^1.5.0",
		"prisma": "^7.2.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
